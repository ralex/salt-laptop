{% if pillar['ssh']['client']['add_keys_to_agent'] %}AddKeysToAgent yes{% endif %}

{% for client, hosts in salt['pillar.get']('ssh', {}).iteritems() %}
{% for host, args in hosts.iteritems() %}
Host {{ host }}
{% if args['hostname'] is defined %}  Hostname {{ args['hostname'] }}{% endif %}
{% if args['proxycommand'] is defined %}  ProxyCommand {{ args['proxycommand'] }}{% endif %}
{% if args['user'] is defined %}  User {{ args['user'] }}{% endif %}
{% if args['identityfile'] is defined %}  IdentityFile {{ args['identityfile'] }}{% endif %}
{% endfor %}
{% endfor %}
